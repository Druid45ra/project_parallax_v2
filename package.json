{
    "name": "project_parallax_v2",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "http-server -p 8080",
        "prettier:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
        "prettier:write": "prettier --write \"**/*.{html,css,js,json,md}\"",
        "html:validate": "html-validate \"index.html\"",
        "lhci:autorun": "lhci autorun --upload.target=temporary-public-storage",
        "ci": "npm run prettier:check && npm run html:validate && npm run lhci:autorun",
        "prepare": "husky install"
    },
    "devDependencies": {
        "http-server": "^14.1.1",
        "prettier": "^2.8.8",
        "html-validate": "^7.5.0",
        "@lhci/cli": "^0.8.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.3.0"
    },
    "lint-staged": {
        "*.html": [
            "prettier --write",
            "html-validate"
        ],
        "*.{css,js,json,md}": [
            "prettier --write"
        ]
    }
}
