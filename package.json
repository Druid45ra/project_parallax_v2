{
    "name": "project_parallax_v2",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "http-server -p 8080",
        "prettier:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
        "prettier:write": "prettier --write \"**/*.{html,css,js,json,md}\"",
        "html:validate": "html-validate \"index.html\"",
        "lhci:autorun": "lhci autorun --upload.target=temporary-public-storage",
        "lint:eslint": "eslint . --ext .js",
        "lint:style": "stylelint \"**/*.css\"",
        "lint": "npm run lint:eslint && npm run lint:style",
        "accessibility": "pa11y http://127.0.0.1:8080",
        "pa11y:report": "pa11y http://127.0.0.1:8080 --reporter json > pa11y-report.json",
        "images:optimize": "node -e \"require('fs').mkdirSync('dist/assets',{recursive:true})\" && imagemin \"assets/*\" --out-dir=dist/assets",
        "bg:build": "node scripts/generate-bg-assets.js",
        "build": "npm run images:optimize || true && npm run bg:build || true",
        "audit": "npm audit --audit-level=moderate",
        "ci": "npm run lint && npm run prettier:check && npm run html:validate && npm run lhci:autorun",
        "prepare": "husky install"
    },
    "devDependencies": {
        "http-server": "^14.1.1",
        "prettier": "^2.8.8",
        "html-validate": "^10.5.0",
        "@lhci/cli": "^0.8.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.3.0",
        "eslint": "^9.39.2",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^30.0.0",
        "pa11y": "^9.0.1",
        "imagemin-cli": "^7.0.1",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-pngquant": "^10.0.0",
        "imagemin-webp": "^8.0.0",
        "node-fetch": "^2.6.7",
        "sharp": "^0.32.1"
    },
    "lint-staged": {
        "*.html": [
            "prettier --write",
            "html-validate"
        ],
        "*.{css,js,json,md}": [
            "prettier --write"
        ]
    }
}
